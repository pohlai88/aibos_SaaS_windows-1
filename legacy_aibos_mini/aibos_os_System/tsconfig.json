{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@aibos/*": ["./packages/*/src"],
      "@apps/*": ["./apps/*/src"],
      "@core/*": ["./packages/core/*/src"],
      "@ui/*": ["./packages/ui-components/src"],
      "@auth/*": ["./packages/auth-sdk/src"],
      "@database/*": ["./packages/database/src"],
      "@accounting/*": ["./packages/ledger-sdk/src"],
      "@crm/*": ["./packages/crm-sdk/src"],
      "@hr/*": ["./packages/hr-sdk/src"],
      "@workflow/*": ["./packages/workflow-sdk/src"],
      "@procurement/*": ["./packages/procurement-sdk/src"],
      "@tax/*": ["./packages/tax-sdk/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
} 