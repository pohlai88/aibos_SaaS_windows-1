{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env", "**/tsconfig.json", "**/next.config.js"],
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*", "SUPABASE_*", "DATABASE_URL", "TURBO_TEAM", "TURBO_TOKEN"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**", "lib/**", "*.tsbuildinfo"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "env": ["NODE_ENV"]
    },
    "lint:fix": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "cache": false,
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "test-results/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": ["*.tsbuildinfo"],
      "env": ["NODE_ENV"]
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "outputs": ["**/prisma/generated/**"]
    },
    "db:push": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "validate": {
      "dependsOn": ["^build", "type-check", "lint"],
      "cache": false
    },
    "prepare": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "build:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "format:check": {
      "outputs": [],
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "docs:build": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "e2e": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "e2e:dev": {
      "cache": false,
      "persistent": true
    },
    "docker:build": {
      "dependsOn": ["^build"],
      "outputs": ["Dockerfile", "docker-compose.yml"]
    },
    "docker:dev": {
      "cache": false,
      "persistent": true
    },
    "deploy:staging": {
      "dependsOn": ["^build", "test", "lint"],
      "cache": false
    },
    "deploy:production": {
      "dependsOn": ["^build", "test", "lint", "e2e"],
      "cache": false
    },
    "dev:fast": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"],
      "outputs": []
    },
    "build:fast": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**", "lib/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "check:deps": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": false
    },
    "analyze": {
      "dependsOn": ["^build"],
      "outputs": ["analyze/**"],
      "cache": false
    },
    "bundle": {
      "dependsOn": ["^build"],
      "outputs": ["bundle/**"],
      "cache": false
    }
  }
} 