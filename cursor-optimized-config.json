{
  "cursor.optimization": {
    "memory": {
      "maxMemory": "8192",
      "enableMemoryOptimization": true,
      "disableMemoryPressure": true
    },
    "performance": {
      "disableGPU": false,
      "disableHardwareAcceleration": false,
      "enableFastScrolling": true,
      "disableAnimations": false,
      "optimizeRendering": true
    },
    "network": {
      "enableCompression": true,
      "optimizeConnections": true,
      "disableTelemetry": true,
      "useLocalAI": false
    },
    "ai": {
      "enableStreaming": true,
      "optimizeContext": true,
      "reduceLatency": true,
      "enableCaching": true
    }
  },
  "editor": {
    "wordWrap": "off",
    "minimap": {
      "enabled": false
    },
    "renderWhitespace": "none",
    "renderControlCharacters": false,
    "renderLineHighlight": "all",
    "cursorBlinking": "solid",
    "cursorSmoothCaretAnimation": "off",
    "smoothScrolling": false,
    "mouseWheelScrollSensitivity": 1,
    "fastScrollSensitivity": 1
  },
  "workbench": {
    "enableExperiments": false,
    "disableTelemetry": true,
    "enableCrashReporter": false,
    "tree": {
      "indent": 8,
      "renderIndentGuides": "none"
    }
  },
  "files": {
    "autoSave": "afterDelay",
    "autoSaveDelay": 1000,
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/.next": true,
      "**/.turbo": true,
      "**/coverage": true
    },
    "watcherExclude": {
      "**/node_modules/**": true,
      "**/dist/**": true,
      "**/.next/**": true,
      "**/.turbo/**": true
    }
  },
  "search": {
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/.next": true,
      "**/.turbo": true,
      "**/coverage": true
    }
  },
  "typescript": {
    "suggest": {
      "autoImports": true,
      "includeCompletionsForModuleExports": true
    },
    "updateImportsOnFileMove": "always",
    "preferences": {
      "includePackageJsonAutoImports": "auto"
    }
  },
  "javascript": {
    "suggest": {
      "autoImports": true,
      "includeCompletionsForModuleExports": true
    },
    "updateImportsOnFileMove": "always",
    "preferences": {
      "includePackageJsonAutoImports": "auto"
    }
  },
  "terminal.integrated": {
    "gpuAcceleration": "on",
    "smoothScrolling": false
  },
  "extensions": {
    "autoUpdate": false,
    "autoCheckUpdates": false
  }
}
