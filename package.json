{
  "name": "aibos-platform",
  "version": "1.0.0",
  "description": "AI-BOS: The Windows OS for SaaS - Unified platform for micro-apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:smoke:staging": "jest --testPathPattern=smoke --testEnvironment=node --setupFilesAfterEnv=./shared/config/jest.setup.js",
    "test:smoke:production": "jest --testPathPattern=smoke --testEnvironment=node --setupFilesAfterEnv=./shared/config/jest.setup.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "snyk test",
    "health:check:production": "node scripts/health-check.js",
    "report:deployment": "node scripts/generate-deployment-report.js",
    "clean": "rimraf dist coverage .nyc_output",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test:ci && npm run build",
    "prepare": "husky install"
  },
  "keywords": [
    "saas",
    "platform",
    "micro-apps",
    "event-driven",
    "typescript",
    "enterprise",
    "multi-tenant",
    "ai-powered"
  ],
  "author": "AI-BOS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aibos-platform/aibos-platform.git"
  },
  "bugs": {
    "url": "https://github.com/aibos-platform/aibos-platform/issues"
  },
  "homepage": "https://aibos-platform.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "prom-client": "^15.0.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "sanitize-html": "^2.11.0",
    "xss": "^1.0.14",
    "sqlstring": "^2.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "rimraf": "^5.0.5",
    "snyk": "^1.1230.0",
    "sonarqube-scanner": "^3.3.0",
    "codecov": "^3.8.3",
    "nyc": "^15.1.0",
    "autocannon": "^7.12.0",
    "artillery": "^2.0.0-27",
    "playwright": "^1.39.0",
    "cypress": "^13.6.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/shared/config/jest.setup.js"],
    "collectCoverageFrom": [
      "shared/**/*.{ts,tsx}",
      "!shared/**/*.d.ts",
      "!shared/**/__tests__/**",
      "!shared/**/*.test.{ts,tsx}",
      "!shared/**/*.spec.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapping": {
      "^@shared/(.*)$": "<rootDir>/shared/$1"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "jest"],
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false
} 