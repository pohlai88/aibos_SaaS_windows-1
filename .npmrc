# AI-BOS Enterprise npm Configuration
# Optimized for security, performance, and consistency

# Registry Configuration
registry=https://registry.npmjs.org/
@aibos:registry=https://registry.npmjs.org/

# Security Settings
audit-level=moderate
audit=true
fund=false
save-exact=true
save-prefix=""
package-lock=true

# Performance Optimization
cache=.npm-cache
prefer-offline=true
progress=false

# Enterprise Compliance
loglevel=warn
color=false
unicode=false

# CI/CD Optimization
ci=true
ignore-scripts=false
ignore-engines=false

# Development Settings
save-dev=true
save-peer=true
save-optional=false

# Security Headers
strict-ssl=true
ca=
cafile=

# Proxy Settings (uncomment if needed)
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080

# Authentication (for private packages)
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Workspace Configuration
workspaces-update=false
