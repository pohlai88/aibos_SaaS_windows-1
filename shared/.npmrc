# ==============================================
# AI-BOS Enterprise npm Configuration v3.2
# ==============================================

# Registry Configuration
registry=https://registry.npmjs.org/
@aibos:registry=https://registry.npmjs.org/
@internal:registry=https://nexus.aibos.enterprise/repository/npm-group/

# Security Hardening
audit-level=critical
engine-strict=true
strict-peer-dependencies=true
package-lock-only=true
omit=optional
strict-ssl=true

# Dependency Control
save-exact=true
save-prefix=
lockfile-version=3
legacy-peer-deps=false

# Performance Optimization
cache=.aibos-npm-cache
prefer-offline=true
prefer-dedupe=true
maxsockets=3
fetch-retries=2
fetch-retry-mintimeout=10000

# Enterprise Compliance
loglevel=error
color=false
unicode=false
tmp=/var/tmp
scripts-prepend-node-path=true

# CI/CD Enhancements
ci=true
ignore-scripts=true
foreground-scripts=false
offline=false

# Workspace Optimizations
workspaces-update=false
link-workspace-packages=false

# Signature Verification
sign-git-commit=false
sign-git-tag=false

# Deprecation Control
deprecation=false

# Network Resiliency
fetch-timeout=300000
fetch-retry-factor=2

# AI-BOS Specific Optimizations
fund=false
progress=false
audit=true
