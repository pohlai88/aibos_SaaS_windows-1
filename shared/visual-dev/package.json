{
  "name": "@aibos/visual-dev",
  "version": "1.0.0",
  "description": "AI-BOS Visual Development Interface - Enterprise-grade drag-drop app builder with real-time preview and AI assistance",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./builder": {
      "types": "./dist/builder/index.d.ts",
      "import": "./dist/builder/index.mjs"
    },
    "./canvas": {
      "types": "./dist/canvas/index.d.ts",
      "import": "./dist/canvas/index.mjs"
    },
    "./preview": {
      "types": "./dist/preview/index.d.ts",
      "import": "./dist/preview/index.mjs"
    },
    "./ai-assistant": {
      "types": "./dist/ai-assistant/index.d.ts",
      "import": "./dist/ai-assistant/index.mjs"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:compile && npm run build:optimize",
    "build:clean": "rimraf dist",
    "build:compile": "tsc",
    "build:optimize": "rollup -c rollup.config.js",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit --incremental",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\""
  },
  "keywords": [
    "aibos",
    "visual-development",
    "drag-drop",
    "app-builder",
    "no-code",
    "low-code",
    "ai-assisted",
    "real-time-preview",
    "enterprise"
  ],
  "author": "AI-BOS Team",
  "license": "MIT",
  "dependencies": {
    "@aibos/shared": "^1.0.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.525.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.22.4",
    "immer": "^10.0.3",
    "monaco-editor": "^0.45.0",
    "react-monaco-editor": "^0.55.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "rollup": "^4.6.0",
    "vitest": "^1.6.1",
    "eslint": "^8.51.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
