{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false,
    "strict": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "index.ts",
    "lib/logger.ts",
    "lib/monitoring.ts",
    "lib/events.ts",
    "lib/manifests.ts",
    "lib/entities.ts",
    "lib/index.ts",
    "types/api.ts",
    "types/api.errors.ts",
    "types/primitives.ts",
    "types/index.ts",
    "utils/apiFetcher.ts",
    "utils/index.ts",
    "validation/index.ts",
    "ui-components/src/primitives/Button/Button.tsx",
    "ui-components/src/primitives/Input/Input.tsx",
    "ui-components/src/primitives/Badge/Badge.tsx",
    "ui-components/src/primitives/index.ts",
    "ui-components/src/utils/cn.ts",
    "ui-components/src/utils/index.ts",
    "ui-components/src/types/index.ts",
    "ui-components/src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "visual-dev/**/*",
    "ai-onboarding/**/*",
    "community-templates/**/*",
    "strategic-enhancements/**/*",
    "ai/**/*",
    "cli/**/*",
    "collaboration/**/*",
    "devtools/**/*",
    "dev-experience/**/*",
    "ui-components/src/ai/**/*",
    "ui-components/src/data/**/*",
    "ui-components/src/jobs/**/*",
    "ui-components/src/layout/**/*",
    "ui-components/src/core/**/*",
    "types/metadata/**/*",
    "types/auth/**/*",
    "types/billing/**/*",
    "types/roles/**/*",
    "types/tenant/**/*",
    "types/user/**/*",
    "types/unified.ts",
    "types/type-guards.ts",
    "lib/billingRenderer.ts",
    "lib/cache.ts",
    "lib/core/**/*",
    "lib/intelligence/**/*",
    "lib/security/**/*",
    "lib/database.ts",
    "lib/security.ts",
    "security/**/*",
    "utils/permissionHandlers.ts",
    "utils/protectedFetch.ts",
    "validation/auth.schema.ts",
    "validation/user.schema.ts",
    "validation/user.validation.ts"
