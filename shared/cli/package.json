{
  "name": "@aibos/cli",
  "version": "1.0.0",
  "description": "Enterprise-grade CLI tools for AI-BOS platform development",
  "main": "dist/index.js",
  "bin": {
    "aibos": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "aibos",
    "cli",
    "enterprise",
    "micro-app",
    "event-driven",
    "manifest",
    "entity-management"
  ],
  "author": "AI-BOS Team",
  "license": "MIT",
  "dependencies": {
    "@aibos/shared": "file:../",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "figlet": "^1.7.0",
    "boxen": "^7.1.1",
    "update-notifier": "^6.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "yaml": "^2.3.4",
    "json5": "^2.2.3",
    "semver": "^7.5.4",
    "cross-spawn": "^7.0.3",
    "which": "^3.0.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/semver": "^7.5.6",
    "@types/which": "^3.0.2",
    "@types/node-fetch": "^2.6.11",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "scripts/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aibos/shared.git"
  },
  "bugs": {
    "url": "https://github.com/aibos/shared/issues"
  },
  "homepage": "https://github.com/aibos/shared#readme"
} 