{
  "name": "aibos-backend",
  "version": "1.0.0",
  "description": "AI-BOS Platform Backend API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --esm src/index.ts",
    "test-server": "ts-node-dev --respawn --transpile-only --esm src/test-server.ts",
    "simple": "node simple-server.js",
    "ollama-test": "node ollama-test.js",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "clean": "if exist dist rmdir /s /q dist",
    "build:prod": "tsc && npm run optimize",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "optimize": "npm run clean && tsc --sourceMap false --declaration false",
    "health:check": "curl -f http://localhost:3001/api/health || exit 1",
    "migrate": "node dist/migrations/index.js",
    "seed": "node dist/seed/index.js",
    "deploy": "npm run build && railway up",
    "debug": "DEBUG=aibos:*,express:* ts-node-dev --respawn --transpile-only --esm --inspect=9229 src/index.ts",
    "debug:memory": "node --inspect=9229 --max-old-space-size=4096 dist/index.js",
    "debug:cpu": "node --inspect=9229 --cpu-prof dist/index.js",
    "debug:profile": "clinic doctor -- node dist/index.js",
    "debug:heap": "clinic heap -- node dist/index.js",
    "debug:flame": "clinic flame -- node dist/index.js",
    "debug:sql": "DEBUG_SQL=true DEBUG=aibos:*,express:* ts-node-dev --respawn --transpile-only src/index.ts",
    "debug:api": "DEBUG_API=true DEBUG=aibos:*,express:* ts-node-dev --respawn --transpile-only src/index.ts",
    "debug:performance": "DEBUG_PERFORMANCE=true DEBUG=aibos:*,express:* ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "dependencies": {
    "@aibos/shared-infrastructure": "file:../../shared/aibos-shared-infrastructure-1.0.0.tgz",
    "@supabase/supabase-js": "2.39.8",
    "aibos-shared-infrastructure": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "1.8.1",
    "cors": "2.8.5",
    "dotenv": "^16.6.1",
    "events": "3.3.0",
    "express": "^4.21.2",
    "express-rate-limit": "7.5.1",
    "helmet": "7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "1.10.1",
    "pg": "8.11.3",
    "redis": "^4.7.1",
    "uuid": "9.0.1",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "2.8.12",
    "@types/crypto-js": "4.1.2",
    "@types/express": "4.17.17",
    "@types/helmet": "4.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.19",
    "@types/pg": "8.10.9",
    "@types/redis": "4.0.11",
    "@types/uuid": "9.0.7",
    "@types/ws": "8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "aibos",
    "saas",
    "backend",
    "api",
    "railway",
    "typescript"
  ],
  "author": "AI-BOS Team",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ]
  }
}
