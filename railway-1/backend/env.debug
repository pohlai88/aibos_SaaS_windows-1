# Debug Environment Configuration
NODE_ENV=development
DEBUG=aibos:*,express:*
DEBUG_LEVEL=debug

# Backend Debug Flags
DEBUG_SQL=true
DEBUG_API=true
DEBUG_MEMORY=true
DEBUG_PERFORMANCE=true

# Database Debug
DEBUG_DB=true
DEBUG_DB_QUERIES=true

# Authentication Debug
DEBUG_AUTH=true
DEBUG_JWT=true

# API Debug
DEBUG_ROUTES=true
DEBUG_MIDDLEWARE=true

# Performance Debug
DEBUG_SLOW_QUERIES=true
DEBUG_MEMORY_LEAKS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Development Server
PORT=3001
HOST=localhost

# Database (if using)
DATABASE_URL=postgresql://localhost:5432/aibos_debug

# Redis (if using)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=debug-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Monitoring
ENABLE_TELEMETRY=true
ENABLE_METRICS=true

# AI Database Debug
DEBUG_AI_DATABASE=true
DEBUG_OLLAMA=true
DEBUG_SCHEMA=true

# Consciousness Engine Debug
DEBUG_CONSCIOUSNESS=true
DEBUG_QUANTUM=true

# WebSocket Debug
DEBUG_WEBSOCKET=true
DEBUG_REALTIME=true
